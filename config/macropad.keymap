#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";
        
        default_layer {
            label = "DEFAULT";
            bindings = <
                &kp A     &kp B
                &kp C     &kp D
            >;
        };
        
        function_layer {
            label = "FUNCTION";
            bindings = <
                &bt BT_CLR   &bt BT_SEL 0
                &bt BT_SEL 1 &trans
            >;
        };
    };
};